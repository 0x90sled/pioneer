	v7 = v(1.5, 0, -1)
	v8 = v(0, 0, 6)
	v9 = v(0, 0, -1)
	v10 = v(1.5, 1.5, 6)
	v11 = v(1.5, 1.5, -1)
	tan1 = v(0, 1.5, 0) # tangents
	tan2 = v(-1.5, 0, 0)

	v20 = vhermite(v8, v10, tan1, tan2, animfn=gflap)
